{
  "type": "object",
  "title": "Metadata Form example",
  "description": "Settings of the metadata form extension.",
  "jupyter.lab.metadataforms": [
    {
      "id": "Extension_metadata",
      "label": "Extension metadata",
      "metadataSchema": {
        "type": "object",
        "properties": {
          "/my-extension/active": {
            "title": "Custom widget",
            "description": "Active status",
            "type": "boolean"
          },
          "/my-extension/name": {
            "title": "name",
            "description": "Unique name",
            "type": "string"
          },
          "/my-extension/nested/more_nested/test": {
            "title": "nested",
            "description": "Nested metadata",
            "type": "string"
          },
          "/root-value": {
            "title": "root",
            "description": "Root metadata",
            "type": "integer",
            "default": 1
          }
        },
        "allOf": [
          {
            "if": {
              "properties": {
                "/my-extension/active": {
                  "const": false
                }
              }
            },
            "then": {
              "properties": {
                "/my-extension/conditional" :{
                  "title": "conditional field",
                  "type": "string",
                  "enum": ["condition1", "condition2", "condition3"]
                }
              }
            }
          }
        ]
      },
      "uiSchema": {
        "ui:order": [
          "/my-extension/name",
          "/my-extension/conditional",
          "/my-extension/active",
          "/my-extension/nested/more_nested/test",
          "/root-value"
        ]
      },
      "metadataOptions": {
        "/my-extension/active": {
          "customWidget": "custom-checkbox"
        },
        "/my-extension/name": {
          "cellTypes": ["raw"]
        }
      }
    }
  ],
  "additionalProperties": false
}
